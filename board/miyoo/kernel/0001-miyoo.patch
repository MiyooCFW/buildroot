+static void __init suniv_ccu_setup(struct device_node *node)
+{
+  u32 val;
+  void __iomem *reg;
+
+  reg = of_io_request_and_map(node, 0, of_node_full_name(node));
+  if (IS_ERR(reg)) {
+    pr_err("%pOF: Could not map the clock registers\n", node);
