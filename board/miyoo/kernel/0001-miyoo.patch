+static void suniv_cpu_init(struct myfb_par *par)
+{
+    uint32_t ret, i;
+    writel(0x91001307, iomm.ccm + PLL_VIDEO_CTRL_REG);
+    while((readl(iomm.ccm + PLL_VIDEO_CTRL_REG) & (1 << 28)) == 0){}
+    while((readl(iomm.ccm + PLL_PERIPH_CTRL_REG) & (1 << 28)) == 0){}
