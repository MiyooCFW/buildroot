+  green = CNVT_TOHW(green, info->var.green.length);
+  ((u32*)(info->pseudo_palette))[regno] = (red << info->var.red.offset) | (green << info->var.green.offset) | (blue << info->var.blue.offset);
+  return 0;
+}
