+static void pll_cpu_init(uint8_t mul, uint8_t div) // out = (24MHz*N*K) / (M*P)
+{
+    if ((mul == 0) || (div == 0))
+        return;
+    if ((mul > 128) || (div > 16))
+        return;
+
+    uint8_t n, k, m, p;
+    // mul = n*k
+    // n = 1..32
+    // k = 1..4
+    for (k = 1; k <= 4; k++)
+    {
+        n = mul / k;
+        if ((n < 32) && (n * k == mul))
+            break;
+    }
+    if (n * k != mul)
+        return;
+    // div = m*p
+    // m = 1..4
+    // k = 1,2,4
+    for (m = 1; m <= 4; m++)
+    {
+        p = div / m;
+        if (((p == 1) || (p == 2) || (p == 4)) && (m * p == div))
+            break;
+    }
+    if (m * p != div)
+        return;
+
+    p--;
+    if (p == 3)
+        p = 2;
+
+    uint32_t val = readl(iomm.ccm + CCU_PLL_CPU_CTRL);
+    val &= (1 << 31) | (1 << 28);
+    val |= ((n - 1) << 8) | ((k - 1) << 4) | (m - 1) | (p << 16);
+    writel(val, iomm.ccm + CCU_PLL_CPU_CTRL);
+}
