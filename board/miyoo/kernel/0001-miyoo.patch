+extern void MIYOO_SET_VOLUME(unsigned long arg) {
+  uint32_t ret;
+  ret = readl(iomm.codec + DAC_MIXER_CTRL_REG);
+  ret&= ~0x3f;
+  ret|= (arg * 6);
+  writel(ret, iomm.codec + DAC_MIXER_CTRL_REG);
+  MIYOO_VOLUME = arg;
+  //printk("MIYOO_SET_VOLUME %ld %ld %ld\n", arg, (arg * 6),MIYOO_VOLUME);
+}
