+{
+    uint32_t reg = readl(iomm.ccm + PLL_VIDEO_CTRL_REG);
+
+    if ((reg & (1 << 24)) == 0)
+    {                           // Fractional mode
+        if (reg & (1 << 25))
+            return 297000000;
+        else
+            return 270000000;
+    }
+    else
+    {                           // Integer mode
+        uint32_t mul = (reg >> 8) & 0x7F;
+        uint32_t div = (reg >> 0) & 0xF;
+
+        return (24000000 * (mul + 1) / (div + 1));
+    }
