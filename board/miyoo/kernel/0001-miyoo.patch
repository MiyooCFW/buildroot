+    tmp|= (new_fp & 0x0f) <<  4;
+    tmp|= (new_bp & 0x0f) <<  0;
+    w = copy_to_user((void*)arg, &tmp, sizeof(unsigned long));
+    break;
+  case MIYOO_FB0_SET_FPBP:
+    new_fp = (arg & 0xf0) >> 4;
+    new_bp = (arg & 0x0f) >> 0;
