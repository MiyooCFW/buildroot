+    r|= 0x22222220;
+    writel(r, iomm.gpio + PD_CFG0);
+
+    r = readl(iomm.gpio + PD_CFG1);
+    r&= 0x000000f0;
+    r|= 0x22222202;
+    writel(r, iomm.gpio + PD_CFG1);
+
+    r = readl(iomm.gpio + PD_CFG2);
+    r&= 0x00000000;
+    r|= 0x22222222;
+    writel(r, iomm.gpio + PD_CFG2);
+
+    if (lowcurrent) {
