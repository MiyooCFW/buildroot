+static int myfb_pan_display(struct fb_var_screeninfo *var, struct fb_info *info)
+{
+    struct myfb_par *par = info->par;
+
+    info->var.xoffset = var->xoffset;
+    info->var.yoffset = var->yoffset;
+    par->app_virt->yoffset = var->yoffset;
+    return 0;
+}
