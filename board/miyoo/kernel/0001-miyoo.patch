+    printk("miyoo keypad version config as v%d\n", (int)miyoo_ver);
+#endif
+    break;
+  case MIYOO_KBD_GET_VER:
+    ret = copy_to_user((void*)arg, &miyoo_ver, sizeof(unsigned long));
+    break;
+  case MIYOO_LAY_SET_VER:
