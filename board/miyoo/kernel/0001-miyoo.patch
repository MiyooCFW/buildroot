+{
+  suniv_setbits(iomm.gpio + PC_CFG0, 1 << 0); // csx
+  suniv_clrbits(iomm.gpio + PC_CFG0, 1 << 1);
+  suniv_clrbits(iomm.gpio + PC_CFG0, 1 << 2);
+  suniv_setbits(iomm.gpio + PC_DATA, 1 << 0);
