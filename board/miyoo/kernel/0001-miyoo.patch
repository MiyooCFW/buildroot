+static uint32_t lcdc_wait_busy(void)
+{
+	uint32_t cnt=0;
+	
+  suniv_setbits(iomm.lcdc + TCON0_CPU_IF_REG, (1 << 0));
+	ndelay(10);
+	while(1){
+		if(readl(iomm.lcdc + TCON0_CPU_IF_REG) & 0x00c00000){
+			if(cnt > 200){
+				return -1;
+			}
+		  else{
+		  	cnt+= 1;
+			}
+		}
+		break;
+	}
+	return 0;
+}
