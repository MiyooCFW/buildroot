+  res = platform_get_resource(pdev, IORESOURCE_MEM, 0);
+  pwm->base = devm_ioremap_resource(&pdev->dev, res);
+  if (IS_ERR(pwm->base)) {
+    return PTR_ERR(pwm->base);
+  }
