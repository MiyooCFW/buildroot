+
+    r = readl(iomm.gpio + PD_PUL1);
+    r&= 0xfffff0ff;
+    r|= 0x00000500;
+    writel(r, iomm.gpio + PD_PUL1);
+
+    r = readl(iomm.gpio + PE_CFG1);
+    r&= 0xffff0fff;
+    r|= 0x00001000;
+    writel(r, iomm.gpio + PE_CFG1);
+    writel(0xffffffff, iomm.gpio + PE_DATA);
+}
